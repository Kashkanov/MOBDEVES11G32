<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tindergree" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orangeAppColor</item>
        <item name="colorPrimaryVariant">@color/orangeAppColor</item>
        <item name="colorOnPrimary">@color/orangeAppColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/orangeAppColor</item>
        <!-- Customize your theme here. -->
        <item name="background_color">@color/white</item>
        <item name="text_color">@color/black</item>
        <item name="secondary_background">@color/colorSecondary</item>
        <item name="tertiary_background">@color/lightGray</item>
    </style>


    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/orangeAppColor</item>
        <item name="colorPrimaryDark">@color/orangeAppColor</item>
        <item name="colorAccent">@color/orangeAppColor</item>
        <item name="android:statusBarColor">@color/orangeAppColor</item>
    </style>

    <style name="ToolbarTheme" parent="android:Theme.Holo">
        <item name="android:homeAsUpIndicator">@drawable/back_button_image</item>
    </style>

    <style name="ToolbarSettings" parent="android:Theme.Holo">
        <item name="android:homeAsUpIndicator">@drawable/ic_baseline_arrow_forward_24</item>
        <item name="android:paddingLeft">330dp</item>
    </style>



</resources>