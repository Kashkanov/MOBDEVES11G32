<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tindergree" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orangeAppColor</item>
        <item name="colorPrimaryVariant">@color/orangeAppColor</item>
        <item name="colorOnPrimary">@color/orangeAppColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orangeAppColor</item>
        <item name="colorSecondaryVariant">@color/orangeAppColor</item>
        <item name="colorOnSecondary">@color/orangeAppColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/orangeAppColor</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="colorPrimary">@color/orangeAppColor</item>
        <item name="colorPrimaryDark">@color/orangeAppColor</item>
        <item name="colorAccent">@color/orangeAppColor</item>
        <item name="android:statusBarColor">@color/orangeAppColor</item>
    </style>

    <style name="ToolbarTheme" parent="android:Theme.Holo">
        <item name="android:homeAsUpIndicator">@drawable/back_button_image</item>
    </style>

</resources>